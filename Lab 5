void getChoice(int&x)
{
	while (x < min || x > max)
	{
		while (cin.fail())
		{
			cin.clear();
			cin.ignore();
		}
		cout << "Invalid input." << endl;
		cin >> x;
	}
}

Student newStudent(bool space)
{
	string name;	

	Student tempStu;

	if (space == true)
	{
		cin.clear();

		cout << "Please enter the student name." << endl;
		getline(cin, tempStu.studentName);

		cin.ignore(1000, '\n');
		return tempStu;
	}
	else
		cout << "No more space in the student registry!" << endl;
	cin.clear();
	cin.ignore(1000, '\n');
}

